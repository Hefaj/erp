{
  "name": "product",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "lib/page/product/src",
  "prefix": "erp",
  "tags": [],
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "lib/page/product/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "lib/page/product/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "lib/page/product/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "lib/page/product/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "lib/page/product/**/*.ts",
          "lib/page/product/**/*.html",
          "lib/page/product/package.json"
        ]
      }
    }
  }
}
